<div class="main">
  <select>
    <option value="option1">选项1</option>
    <option value="option2">选项2</option>
    <option value="option3">选项3</option>
  </select>

  <div class="amout-wrapper">
    <h3>總金額</h3>
    {{!-- 總金額 --}}
  </div>

  <div class="record-wrappser">
    {{#each records}}
    <div class="card">
      <div class="category-img">
        {{{this.img}}}
      </div>
      <div class="record-content">
        <div class="record-title">{{this.name}}</div>
        <div class="record-date">{{this.date}}</div>
        <div class="record-amout">{{this.amount}}</div>
      </div>
      <a href="/records/{{this._id}}/edit">修改</a>
      <form action="/records/{{this._id}}/delete" method="post">
        <button type="submit">刪除</button>
      </form>
    </div>
    {{/each }}
  </div>

  <div class="create-container">
    <a href="/records/new">新增支出</a>
  </div>
</div>